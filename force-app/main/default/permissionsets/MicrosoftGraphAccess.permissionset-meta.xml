<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>MicrosoftGraphAccess</label>
    <description>Grants access to SharePoint / Graph API Integration</description>
    <hasActivationRequired>false</hasActivationRequired>

    <externalCredentialPrincipalAccesses>
        <enabled>true</enabled>
        <externalCredentialPrincipal>MicrosoftGraphExtCred-MicrosoftGraphPrincipal</externalCredentialPrincipal>
    </externalCredentialPrincipalAccesses>

    <classAccesses>
        <apexClass>SharePointFileBrowserController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>SharePointOauthController</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <pageAccesses>
        <apexPage>SharePointCallback</apexPage>
        <enabled>true</enabled>
    </pageAccesses>

    <objectPermissions>
        <object>SharePoint_Token__c</object>
        <allowRead>true</allowRead>
        <allowEdit>true</allowEdit>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <viewAllRecords>false</viewAllRecords>
        <modifyAllRecords>false</modifyAllRecords>
    </objectPermissions>

    <fieldPermissions>
        <field>Sharepoint_Config__mdt.Client_ID__c</field>
        <readable>true</readable>
        <editable>false</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Sharepoint_Config__mdt.Client_Secret__c</field>
        <readable>true</readable>
        <editable>false</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Sharepoint_Config__mdt.Tenant_ID__c</field>
        <readable>true</readable>
        <editable>false</editable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Sharepoint_Config__mdt.Site_ID__c</field>
        <readable>true</readable>
        <editable>false</editable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
    <field>SharePoint_Token__c.Access_Token__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>SharePoint_Token__c.Refresh_Token__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>SharePoint_Token__c.Expires_At__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <tabSettings>
        <tab>SharePoint_Files</tab>
        <visibility>Visible</visibility>
    </tabSettings>
</PermissionSet>
